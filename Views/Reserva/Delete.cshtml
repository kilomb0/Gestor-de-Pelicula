@model CineProyecto.Models.Reserva

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center my-4">Eliminar Reserva</h2>

<h3 class="text-center">¿Estás seguro de que deseas eliminar esta Reserva?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-right">Cliente:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Cliente.NombreCliente)</dd>

        <dt class="col-sm-2 text-right">Funcion:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Funcion.NombreFuncion)</dd>

        <dt class="col-sm-2 text-right">Horario:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Horario.Inicio)</dd>

        <dt class="col-sm-2 text-right">Pelicula:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Pelicula.NombrePelicula)</dd>

        <dt class="col-sm-2 text-right">Sala:</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Sala.NombreSala)</dd>

    </dl>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-group text-center">
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary ml-2" })
</div>
}

