@model IEnumerable<CineProyecto.Models.Reserva>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Lista de Reserva</h2>

<div class="container">
    <p>
        @Html.ActionLink("Agregar Reserva", "Create", null, new { @class = "btn btn-primary mb-3" })
    </p>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Nombre del Cliente
                </th>
                <th>
                    Tipo de Funcion
                </th>
                <th>
                    Horario
                </th>
                <th>
                    Nombre de la Pelicula
                </th>
                <th>
                    Nombre de la Sala
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.NombreCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Funcion.NombreFuncion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Horario.Inicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pelicula.NombrePelicula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sala.NombreSala)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdReserva }, new { @class = "btn btn-sm btn-warning mr-1" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdReserva }, new { @class = "btn btn-sm btn-info mr-1" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdReserva }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
          

    </table>
</div>


