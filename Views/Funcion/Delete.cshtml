@model CineProyecto.Models.Funcion

@{
    ViewBag.Title = "Eliminar Función";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Eliminar Funcion</h2>

<h3 class="text-center">¿Estás seguro de que deseas eliminar esta funcion?</h3>
<div class="container mt-4">
    <hr />
    <dl class="row">
   
        <dt class="col-sm-2 text-right">Tipo de Funcion:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NombreFuncion)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary ml-2" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
