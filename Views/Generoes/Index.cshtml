@model IEnumerable<CineProyecto.Models.Genero>

@{
    ViewBag.Title = "Lista de Géneros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Lista de Géneros</h2>

<div class="container">
    <p>
        @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-primary mb-3" })
    </p>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                   Tipo de Género
                </th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreGenero)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdGenero }, new { @class = "btn btn-sm btn-warning mr-1" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdGenero }, new { @class = "btn btn-sm btn-info mr-1" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdGenero }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
