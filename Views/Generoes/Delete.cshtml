@model CineProyecto.Models.Genero

@{
    ViewBag.Title = "Eliminar Género";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Eliminar Género</h2>

<h3 class="text-center">¿Estás seguro de que deseas eliminar este Genero?</h3>
<div class="container mt-4">
    <div>
        <hr />
        <dl class="row">
            <dt class="col-md-2">
                Nombre del Genero
            </dt>
            <dd class="col-md-10">
                @Html.DisplayFor(model => model.NombreGenero)
            </dd>
        </dl>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color mt-3">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
