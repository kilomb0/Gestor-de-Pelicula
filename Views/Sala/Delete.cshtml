@model CineProyecto.Models.Sala

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Eliminar Sala</h2>

<h3 class="text-center">¿Estás seguro de que deseas eliminar esta sala?</h3>
<div class="container mt-4">
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-right">Nombre de la sala:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NombreSala))</dd>

        <dt class="col-sm-2 text-right">Tamaño de la sala:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TamañoSala)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary ml-2" })
        </div>
    }
</div>