@model IEnumerable<CineProyecto.Models.Sala>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Lista de Salas</h2>

<div class="container">
    <p>
        @Html.ActionLink("Agregar Sala", "Create", null, new { @class = "btn btn-primary mb-3" })
    </p>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Nombre de la sala
                </th>
                <th>
                    Tamaño de la sala
                </th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreSala)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TamañoSala)
                    </td>
                    <td class="text-right">
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdSala }, new { @class = "btn btn-sm btn-warning mx-1" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdSala }, new { @class = "btn btn-sm btn-info mx-1" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdSala }, new { @class = "btn btn-sm btn-danger mx-1" })
                    </td>
                </tr>
            }

    </table>
</div>
